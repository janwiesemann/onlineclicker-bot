<UserControl
    x:Class="OnlineClicker_bot.StateDataTemplateControls.ErrorState"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OnlineClicker_bot"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance {x:Type local:ErrorState}}"
    mc:Ignorable="d">
    <TextBlock
        FontWeight="Bold"
        Text="{Binding Exception.Message, Mode=OneWay}"
        TextWrapping="Wrap" />
</UserControl>